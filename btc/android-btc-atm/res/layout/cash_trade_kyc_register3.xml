<?xml version="1.0" encoding="utf-8"?>

<!-- AUTHOR: F, DATE: 2014.5.31 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/cashtrade_kycregister3_tradetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/grange"
        android:textSize="@dimen/font_size_large" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="75dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/cashtrade_kycregister3_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/cashtrade_kycregister3_step1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/cashtrade_kycregister3_step2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/cashtrade_kycregister3_step3"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:textColor="@color/grange"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/cashtrade_kycregister3_cnl_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/login_register_pressed"
                android:gravity="center"
                android:text="@string/cancel_trade"
                android:textColor="@drawable/btn_color"
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/line_divider"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/cashtrade_kycregister3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="@string/cashtrade_kycl_title"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_large" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="65dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/cashtrade_kycregister3_phone_title"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/cash_trade_kycl_phoneno_title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/cashtrade_kycregister3_phoneno"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:digits="1234567890"
                        android:gravity="left"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/grange"
                        android:textSize="@dimen/font_size_normal"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cashtrade_kycregister3_sendmsg_btn"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/login_register_pressed"
                        android:gravity="center"
                        android:text="@string/cashtrade_kycl_sendmsg"
                        android:textColor="@drawable/btn_color"
                        android:textSize="@dimen/font_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/cashtrade_kycregister3_veri_title"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/cash_trade_kycl_veri_title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_normal" />

                    <EditText
                        android:id="@+id/cashtrade_kycregister3_veri_txt"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/grange"
                        android:textSize="@dimen/font_size_normal"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="65dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/cashtrade_kycregister3_login_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/login_register_pressed"
                    android:gravity="center"
                    android:text="@string/cashtrade_kycl_login"
                    android:textColor="@drawable/btn_color"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>