<?xml version="1.0" encoding="utf-8"?>

<!-- AUTHOR: F, DATE: 2014.5.31 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
            android:id="@+id/cashtrade_kycregister2_tradetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/grange"
            android:textSize="@dimen/font_size_large"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="75dp"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/cashtrade_kycregister2_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_normal"/>

            <TextView
                    android:id="@+id/cashtrade_kycregister2_step1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_small"/>
            <TextView
                    android:id="@+id/cashtrade_kycregister2_step2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:textColor="@color/grange"
                    android:textSize="@dimen/font_size_small"/>
            <TextView
                    android:id="@+id/cashtrade_kycregister2_step3"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_small"/>
			<TextView
                    android:id="@+id/cashtrade_kycregister2_cnl_btn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/btn_normal"
                    android:gravity="center"
                    android:text="@string/cancel_trade"
                    android:textColor="@drawable/btn_color"
                    android:textSize="@dimen/font_size_small"/>
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="90dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/line_divider"
                android:gravity="center"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/cashtrade_kycregister2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_large"/>

            <ImageView
                    android:id="@+id/cashtrade_kycregister2_img"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/idcard"
                    android:background="@drawable/qrcode_frame"
                    android:focusable="true"
                    android:scaleType="fitCenter"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/cashtrade_kycregister2_rescan_btn"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="100dp"
                        android:background="@drawable/btn_normal"
                        android:gravity="center"
                        android:text="@string/cashtrade_kycl_login"
                        android:textColor="@drawable/btn_color"
                        android:textSize="@dimen/font_size_normal"/>

                <TextView
                        android:id="@+id/cashtrade_kycregister2_nxt_btn"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_normal"
                        android:gravity="center"
                        android:text="@string/cashtrade_kycl_login"
                        android:textColor="@drawable/btn_color"
                        android:textSize="@dimen/font_size_normal"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
