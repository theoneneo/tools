<?xml version="1.0" encoding="utf-8"?>

<!-- AUTHOR: F, DATE: 2014.5.31 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
            android:id="@+id/cashtrade_cashout_tradetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/grange"
            android:textSize="@dimen/font_size_large" />

    <TextView
        android:id="@+id/cashtrade_cashout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="230dp"
        android:gravity="center"
        android:text="@string/cashtrade_cashout_title"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_large" />

    <!-- test -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cashtrade_cashout_failure_btn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btn_normal"
            android:gravity="center"
            android:text="交易失败（调试）"
            android:textColor="@drawable/btn_color"
            android:textSize="@dimen/font_size_small"/>
        
        <TextView
            android:id="@+id/cashtrade_cashout_success_btn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="300dp"
            android:background="@drawable/btn_normal"
            android:gravity="center"
            android:text="交易成功（调试）"
            android:textColor="@drawable/btn_color"
            android:textSize="@dimen/font_size_small"/>
    </LinearLayout>

</LinearLayout>